{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.Description | slice(0,100) }} ...</td>
                <td>{{ product.Price}}</td>
                {% if product.stock != 0 %}
                <td>{{ product.stock}}</td>
                {% else %}
                <td>{{'Stock épuisé'}}</td>
                {% endif %}
                <td>
                    <a class="btn btn-outline-success" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                    <a class="btn btn-outline-info" href="{{ path('app_product_stock_add', {'id': product.id}) }}">Ajouter du stock</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
</div>
{% endblock %}
