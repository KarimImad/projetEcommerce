{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Panier</h1>
        <table class="table table-bordered">
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Prix total</th>
                <th>Action</th>
            </tr>
            {% for item in items %}
                <tr>
                    <td>{{item.product.name}}</td>
                    <td>{{item.product.price}}€</td>
                    <td>{{item.quantity}}</td>
                    <td>{{item.product.price * item.quantity}}</td>
                    <td>
                        <a href="{{path('app_cart_product_remove',{'id':item.product.id})}}" class="text-decoration-none text-danger">Supprimer du panier</a>
                    </td>
                </tr>
                {% else %}
                <p>Oups,votre panier est vide,achetez svp</p>
            {% endfor %}
        </table>
        {% if total > 0 %}
            <h2>Total : {{total}}€</h2>
            <div class="row">
                <a data-turbo="false" href="{{path('app_order')}}" class="btn btn-primary w-25">Valider la commande</a>
                <a href="{{path('app_cart_remove')}}" class="btn btn-outline-danger w-25">Supprimer le panier</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
